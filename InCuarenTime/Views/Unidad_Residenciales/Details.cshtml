@model InCuarenTime.Models.Unidad_Residencial

@{
    ViewData["Title"] = "Detalle Unidad Residencial";
}

<div class="masonry-item col-12">
    <div class="bd bgc-white p-20">
        <h4 class="c-grey-900">Detalle  Unidad Residencial</h4>
        <div class="mT-30">
            <div class="row">
                <div class="col-md-2 ">
                    @Html.DisplayNameFor(model => model.Nombre)
                </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Nombre)
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 ">
                    @Html.DisplayNameFor(model => model.Direccion)
                </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Direccion)
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 ">
                    @Html.DisplayNameFor(model => model.Telefono)
                </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Telefono)
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 ">
                    @Html.DisplayNameFor(model => model.Ciudad)
                </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Ciudad.Nombre)
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 ">
                    @Html.DisplayNameFor(model => model.Estado)
                </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Estado)
                </div>
            </div>
            <br />
            <a class="sidebar-link" asp-action="Index">
                <span class="icon-holder">
                    <i class="c-deep-purple-500 ti-align-justify"></i>
                </span>
                <span class="title c-deep-purple-500 "> Volver a la lista </span>
            </a> |
            <a class="sidebar-link" asp-action="Edit" asp-route-id="@Model.Id">
                <span class="icon-holder">
                    <i class="c-purple-500 ti-pencil"></i>
                </span>
                <span class="title c-purple-500 "> Editar </span>
            </a>
        </div>
    </div>
</div>
